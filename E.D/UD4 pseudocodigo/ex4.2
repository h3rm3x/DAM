ALGORITHM adivinar_numero
    const
    numero_secreto <- RANDOM_INT
Endconst
VAR
    numero_adivinado real
    intentos <- 0
    es_correcto<- False
    es_entero logic
ENDVAR

WHILE es_correcto Is False And intentos<=5
    numero_adivinado<- read("escribe un numero ")
    es_entero<- comprueba_real(numero_adivinado)
    IF es_entero = true 
        THEN IF numero_adivinado = numero_secreto
             THEN
        	 es_correcto <- True
        	 write("has adivinado el numero")
            ELSE 
             intentos<- intentos+1
             write("ERROR, el numero es incorrecto, te quedan " (5 - intentos)  " intentos")
            ENDIF
        ENDIF
    ELSE write(“ERROR, el numero no es real, escribe otro numero”)
    ENDIF
ENDWHILE
