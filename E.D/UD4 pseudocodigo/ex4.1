ALGORITHM descuento
    CONST
        precio_minimo_descuento <- 100
        descuento <- 8
    ENDCONST

    VAR
        precio_compra real
    ENDVAR
    write(â€œescribe el precio total de la compra)
    read(precio_compra)
    IF precio_compra = precio_minimo_descuento THEN
        precio_compra<- precio_compra - (precio_compra*descuento/100) 
        write("con el descuento de"+ descuento+ "% el precio de la compra es "+ precio_compra)
        Else write("no hay descuento aplicado")
    ENDIF
ENDALGORITHM
